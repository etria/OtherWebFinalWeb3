
@{
    ViewBag.Title = "Consoles";
}
@using (Html.BeginForm())
{
<div class="row">
    <div class="col-sm-4 col-md-3 col-lg-2 bg-main" style="padding-top:4%; padding-bottom:12%;">
        <h4>Search Filters</h4>

        <div class="row sides" id="systems">
            <h5>Systems </h5><span class="glyphicon glyphicon-menu-down" style="float:right;"></span>
            <div id="systemsChk" class="col-12">

            </div>
        </div>
        <div class="row sides" id="models">
            <h5>Models </h5><span class="glyphicon glyphicon-menu-down" style="float:right;"></span>
            <div id="modelsChk" class="col-12">
            </div>
        </div>
        <div class="row sides" id="color">
            <div class="btn-block" onclick="ShowColor()"><h5>Color </h5><span class="glyphicon glyphicon-menu-down" style="float:right;"></span></div>
            <div id="colorChk" class="col-12">
            </div>
        </div>
    </div>
        <div class="col-sm-8 col-md-9 col-lg-10">
            <h2>Consoles</h2>
            <div class="row">
                <div class="col-10-offset-1" id="tblConsolesG">
                    @Html.Action("_Consoles")
                </div>
            </div>
        </div>
    </div>

}

<script type="text/javascript">
    function ShowColor() {
         $.ajax({
                type: "POST"
                , url: "ShowColor"
                , contentType: 'application/json;'
                , success: function (result) {
                    $("#colorChk").html(result);
                }
            });
        
    }
</script>
