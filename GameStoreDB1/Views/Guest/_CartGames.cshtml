
@model IEnumerable<GameStoreDB1.Game>



<table class="table table-striped">
    <tr>
        <th>
            <h4>Title</h4>
        </th>

        <th>
            <h4>System</h4>
        </th>
        <th>

        </th>

    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.GameSystem.SystemName)
            </td>
            <td>
                <input name="@item.GameId" type="button" Value="Remove From Cart" onclick="RemoveGameFromCart(this)" />
            </td>

        </tr>
    }
</table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}