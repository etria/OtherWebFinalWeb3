@model IEnumerable<GameStoreDB1.Game>

@{
    ViewBag.Title = "_Games";
}


<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.GameSystem.SystemName)
        </th>
        <th>

        </th>

    </tr>

    @foreach (var item in Model)
    {
        if (item.Items.Count >= 1)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.GameSystem.SystemName)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.GameId }) |
                    <input value="@item.GameId" type="button" text="Add to Cart" onclick="AddToCart(this)" />
                </td>

            </tr>
        }
        else
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.GameSystem.SystemName)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.GameId }) |
                    None Available
                </td>

            </tr>
        }
    }

</table>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}

